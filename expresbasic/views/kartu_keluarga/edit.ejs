<!doctype html>
<html lang="id">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Kartu Keluarga</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="d-flex justify-content-center mt-4 mb-4">
        <div class="container py-4 bg-light p-4 rounded" style="max-width: 600px;">
            <h1 class="mb-4 text-center">Edit Kartu Keluarga</h1>

            <!-- Tampilkan pesan flash jika ada -->
            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= messages.error %>
                </div>
            <% } %>
            <% if (messages.success) { %>
                <div class="alert alert-success" role="alert">
                    <%= messages.success %>
                </div>
            <% } %>

            <form action="/kartu_keluarga/update/<%= data.no_kk %>" method="post">
                <!-- No KK -->
                <div class="mb-3">
                    <label for="no_kk" class="form-label">No KK</label>
                    <input type="text" class="form-control" name="no_kk" id="no_kk" value="<%= data.no_kk %>" required readonly>
                </div>

                <!-- Alamat -->
                <div class="mb-3">
                    <label for="alamat" class="form-label">Alamat</label>
                    <textarea name="alamat" id="alamat" class="form-control" rows="3" required><%= data.alamat %></textarea>
                </div>

                <!-- RT dan RW -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="rt" class="form-label">RT</label>
                        <input type="text" name="rt" id="rt" class="form-control" value="<%= data.rt %>" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="rw" class="form-label">RW</label>
                        <input type="text" name="rw" id="rw" class="form-control" value="<%= data.rw %>" required>
                    </div>
                </div>

                <!-- Kode Pos -->
                <div class="mb-3">
                    <label for="kode_pos" class="form-label">Kode Pos</label>
                    <input type="text" name="kode_pos" id="kode_pos" class="form-control" value="<%= data.kode_pos %>" required>
                </div>

                <!-- Desa/Kelurahan -->
                <div class="mb-3">
                    <label for="desa_kelurahan" class="form-label">Desa/Kelurahan</label>
                    <input type="text" name="desa_kelurahan" id="desa_kelurahan" class="form-control" value="<%= data.desa_kelurahan %>" required>
                </div>

                <!-- Kecamatan -->
                <div class="mb-3">
                    <label for="kecamatan" class="form-label">Kecamatan</label>
                    <input type="text" name="kecamatan" id="kecamatan" class="form-control" value="<%= data.kecamatan %>" required>
                </div>

                <!-- Kabupaten/Kota -->
                <div class="mb-3">
                    <label for="kabupaten_kota" class="form-label">Kabupaten/Kota</label>
                    <input type="text" name="kabupaten_kota" id="kabupaten_kota" class="form-control" value="<%= data.kabupaten_kota %>" required>
                </div>

                <!-- Provinsi -->
                <div class="mb-3">
                    <label for="provinsi" class="form-label">Provinsi</label>
                    <input type="text" name="provinsi" id="provinsi" class="form-control" value="<%= data.provinsi %>" required>
                </div>

                <!-- Tombol Simpan -->
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-success">Simpan</button>
                    <a href="/kartu_keluarga" class="btn btn-secondary">Kembali</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>