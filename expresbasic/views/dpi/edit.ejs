<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit dpi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
   <div class="d-flex justify-content-center mt-4 mb-4">
        <div class="container py-4 bg-light p-4 rounded">
            <h1>Edit dpi</h1>
            <form action="/dpi/update/<%= dpi.id_dpi %>" method="POST">
                <input type="hidden" name="id_dpi" value="<%= dpi.id_dpi %>">
                
                <!-- Input untuk nama produk -->
                <div class="mb-3">
                    <label for="nama_dpi">Nama</label>
                    <input type="text" name="nama_dpi" id="nama_dpi" class="form-control" value="<%= dpi.nama_dpi %>">
                </div>
            
                <!-- Input untuk harga produk -->
                <div class="mb-3">
                    <label for="luas">luas</label>
                    <input type="text" name="luas" id="luas" class="form-control" value="<%= dpi.luas %>">
                </div>
            
                <!-- Tombol untuk menyimpan perubahan -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>